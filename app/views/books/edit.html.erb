<div class="container">
	<div class="col-md-6 col-md-offset-3">

			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>

			 <% if @book.errors.any? %>
                <h2> <%= @book.errors.count %>error prohibited this obj from being saved</h2>
                 <ul>
                  <% @book.errors.full_messages.each do |message| %>
                   <li> <%= message %> </li>
                  <% end %>
                 </ul>
             <% end %>

			 <div class="field">
			 	<%= f.label :title %> <br>
			 	<%= f.text_field :title %>
			 </div>
			 <div class="field">
			 	<%= f.label :opinion %> <br>
			 	<%= f.text_area :body %>
			 </div>
			 <div class="field">
			 	<%= f.submit "Update Book" %>
			 </div>
			<% end %>
			<%= link_to "Show", book_path(@book) %> |
			<%= link_to "Back", books_path %>
	</div>
</div>