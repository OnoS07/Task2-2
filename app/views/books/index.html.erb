<div class="container">
<div class="row">
	<div class="col-xs-3">
      <% if @book_new.errors.any? %>
       <h2><%= @book_new.errors.count %>error prohibited this obj from being saved</h2>
       <ul>
        <% @book_new.errors.full_messages.each do |message| %>
         <li> <%= message %> </li>
         <% end %>
        </ul>
      <% end %>
		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<h2>New book</h2>
		<%= render 'books/newform', book_new: @book_new %>

	</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table">
			<tr>
				<td></td>
				<td>Title</td>
				<td>Opinion</td>
				<td></td>
			</tr>
			<% @books.each do |book| %>
			<tr>
				<td>
					<%= link_to user_path(book.user) do %>
					<%= attachment_image_tag book.user, :profile_image, size:"50x50",
						fallback:"no-image-mini.jpg" %>
				    <% end %></td>
				<td>
					<%= link_to book_path(book) do %>
					<%= book.title %> <% end %></td>
				<td> <%= book.body %> </td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
</div>