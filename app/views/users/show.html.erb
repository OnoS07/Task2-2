<div class="container">
<div class="row">
	<div class="col-xs-3">

<h2>User info</h2>
<%= render 'users/profile', user: @user %>
<!--同コントローラーのviewで表示ならusersは省略可 -->

<h2>New book</h2>
<%= render 'books/newform', { book_new: @book_new, book_btn: @book_btn } %>

</div>
<div class="col-xs-9">
<h2>Books</h2>
<!--books一覧 -->
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= link_to user_path(@user) do %>
				<%= attachment_image_tag @user, :profile_image, size:"50x50", fallback: "no-image-mini.jpg" %>
				<% end %>
			</td>
			<td><%= link_to book_path(book), class: "book_#{book.id}" do %>
				<%= book.title %><% end %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<!--books一覧 -->


	</div>
</div>
</div>
